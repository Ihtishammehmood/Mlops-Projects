FROM python:3.13-slim

WORKDIR /app

# Install build tools and uv, then clean up apt cache
RUN apt-get update && \
    apt-get install -y build-essential && \
    rm -rf /var/lib/apt/lists/* && \
    pip install uv

# This line from your original file can be removed if zenml and mlflow are in requirements.txt
# RUN uv pip install --system zenml mlflow

COPY . /app

# (Optional) Install additional requirements
# This step will now succeed because build-essential is installed
RUN uv pip install --system -r requirements.txt

# Initialize ZenML repository
RUN zenml init

# Install ZenML integrations
RUN zenml integration install mlflow --uv -y

# Register experiment tracker and model deployer, and set up stack
RUN zenml experiment-tracker register mlflow_tracker --flavor=mlflow && \
    zenml model-deployer register mlflow --flavor=mlflow && \
    zenml stack register local-mlflow-stack -a default -o default -d mlflow -e mlflow_tracker --set

EXPOSE  8000
  
# CMD ["uv", "run", "run_deployment.py"]
CMD ["sh", "-c", "uv run run_deployment.py; sleep infinity"]
